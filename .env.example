# Django Reddit Clone Environment Configuration
# Copy this file to .env and update the values for your environment

# Environment (development, staging, production)
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Allowed hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (development), leave DATABASE_URL empty
# For PostgreSQL, use: postgresql://user:password@host:port/database
DATABASE_URL=

# PostgreSQL specific settings (if not using DATABASE_URL)
DB_NAME=reddit_clone
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Frontend URLs (for CORS and redirects)
FRONTEND_URL=http://localhost:4200
DJANGO_SERVER_URL=http://localhost:8000
ANGULAR_APP_URL=http://localhost:4200
LOGIN_URL=http://localhost:4200/sign-in

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Social Authentication (optional)
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes

# Cache Configuration (optional)
REDIS_URL=redis://localhost:6379/0